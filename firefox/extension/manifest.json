{
  "manifest_version": 3,
  "name": "__MSG_appName__",
  "short_name": "__MSG_prefix_ask__ Phind AI",
  "description": "__MSG_appDesc__",
  "version": "2025.7.28",
  "author": "Adam Lui",
  "homepage_url": "https://phindomnibox.com",
  "default_locale": "en",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "64": "icons/icon64.png",
    "128": "icons/icon128.png"
  },
  "permissions": ["activeTab"],
  "action": { "default_title": "__MSG_prefix_ask__ Phind AI" },
  "chrome_settings_overrides": {
