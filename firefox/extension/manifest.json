      "name": "__MSG_prefix_ask__ Phind AI",
      "search_url": "https://www.phind.com/search?q={searchTerms}",
      "favicon_url": "icons/icon16.png",
      "keyword": "@phind",
      "is_default": false
    }
  },
  "background": { "scripts": [ "background.js" ]},
  "browser_specific_settings": { "gecko": { "id": "phind.omnibox@adamlui.com", "strict_min_version": "109.0" }}
